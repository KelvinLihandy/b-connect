# Root of the project
root = true

# Default settings for all files
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Specific settings for JSON, YAML, and Markdown (no trimming whitespace)
[*.{json,yml,md}]
indent_size = 2
trim_trailing_whitespace = false

# Specific settings for TypeScript and JavaScript
[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 100

# Specific settings for HTML and CSS
[*.{html,css,scss}]
indent_size = 2

# Settings for shell scripts
[*.sh]
indent_style = space
indent_size = 2